<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="9dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_margin="10dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/resturant_demo_image"
                android:id="@+id/recImgItem"
                android:contentDescription="resturant_demo_image"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="SignUpClicked"
                android:orientation="vertical"
                android:padding="10dp">




                <TextView
                    android:id="@+id/tvRecResturantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:text="Restoran İsmi"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:textAlignment="center" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:text="Masa Numarası :"
                        android:textSize="15dp"
                        android:textColor="@color/orange" />
                    <TextView
                        android:id="@+id/tvRecDeskNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:text="Masa Numarası"
                        android:textSize="15dp"
                        android:textColor="@color/orange" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvperson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:text="Kişi Sayısı:"
                        android:textSize="15dp"
                        android:textColor="@color/orange" />
                    <TextView
                        android:id="@+id/tvRecPersonCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:text="Kişi Sayısı"
                        android:textSize="15dp"
                        android:textColor="@color/orange" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:text="Saat:"
                        android:textSize="15dp"
                        android:textColor="@color/orange" />
                    <TextView
                        android:id="@+id/tvRecDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="10dp"
                        android:text="Saat"
                        android:textSize="15dp"
                        android:textColor="@color/orange" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>