<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardbackgroundColour"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    android:id="@+id/cardview"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/resturant_demo_image"
            android:id="@+id/imgItem"
            android:contentDescription="resturant_demo_image"
            />

        <TextView
            android:id="@+id/tvResturantName"
            android:layout_width="261dp"
            android:layout_height="39dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/resturant_title"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/imgItem"
            app:layout_constraintTop_toTopOf="parent" />
        <ProgressBar
            android:layout_width="200dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:id="@+id/progress_bar"
            app:layout_constraintTop_toBottomOf="@+id/tvResturantName"
            app:layout_constraintLeft_toRightOf="@+id/imgItem"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:progress="40"
            android:max="100"
            android:progressBackgroundTint="@color/white"
            android:progressTint = "@drawable/button_selector"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text="@string/resturant_full_control"
                app:layout_constraintLeft_toRightOf="@+id/progress_bar"
                app:layout_constraintTop_toBottomOf="@+id/tvResturantName"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
        <ImageView
            android:id="@+id/checkitem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@id/imgItem"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tick_icon"
            android:contentDescription="check_icon"
            />
        <TextView
            android:id="@+id/tvdetail"
            android:layout_width="150dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:layout_constraintLeft_toRightOf="@+id/checkitem"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:text="@string/resturant_detail1"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/checkitem2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@id/imgItem"
            app:layout_constraintTop_toBottomOf="@id/checkitem"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tick_icon"
            android:contentDescription="check_icon"
            />
        <TextView
            android:id="@+id/tvdetail2"
            android:layout_width="150dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvdetail"
            app:layout_constraintLeft_toRightOf="@+id/checkitem2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:text="@string/resturant_detail2"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/checkitem3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@id/imgItem"
            app:layout_constraintTop_toBottomOf="@id/checkitem2"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tick_icon"
            android:contentDescription="check_icon"
            />

        <TextView
            android:id="@+id/tvdetail3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvdetail2"
            app:layout_constraintLeft_toRightOf="@+id/checkitem2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:text="@string/resturant_detail3"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvRatingScore"
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/cardbackgroundColour"
            android:background="@drawable/rating_selector"
            android:text="@string/resturant_total_rating"
            android:gravity="center"
            android:textSize="15sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>