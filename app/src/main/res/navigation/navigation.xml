<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/restaurantFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.foodieapp.view.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
        <action
            android:id="@+id/action_loginFragment_to_restaurantFragment"
            app:destination="@id/restaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.foodieapp.view.ResetPasswordFragment"
        android:label="ResetPasswordFragment" >
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <argument
            android:name="info"
            app:argType="string"
            android:defaultValue="info" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.foodieapp.view.ProfileFragment"
        android:label="ProfileFragment"
        app:startDestination="@id/action_profileFragment_to_helpFragment">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_profileFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
        <action
            android:id="@+id/action_profileFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
        <argument
            android:name="user"
            app:argType="com.example.foodieapp.database.UserEntry" />
        <action
            android:id="@+id/action_profileFragment_self"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentFragment"
        android:name="com.example.foodieapp.view.CommentFragment"
        android:label="CommentFragment" >
        <action
            android:id="@+id/action_commentFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <argument
            android:name="author"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="restaurantId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/ratingFragment"
        android:name="com.example.foodieapp.view.RatingFragment"
        android:label="RatingFragment" >
        <argument
            android:name="restaurantInfo"
            app:argType="com.example.foodieapp.database.RestaurantEntry" />
        <argument
            android:name="author"
            app:argType="string" />
        <action
            android:id="@+id/action_ratingFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantFragment"
        android:name="com.example.foodieapp.view.RestaurantFragment"
        android:label="RestaurantFragment" >
        <argument
            android:name="user"
            app:argType="com.example.foodieapp.database.UserEntry" />
        <action
            android:id="@+id/action_restaurantFragment_to_restaurantDetailFragment"
            app:destination="@id/restaurantDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.foodieapp.view.MenuFragment"
        android:label="MenuFragment" >
        <argument
            android:name="restaurantId"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
    <fragment
        android:id="@+id/reservationsFragment"
        android:name="com.example.foodieapp.view.ReservationsFragment"
        android:label="ReservationsFragment" >
        <argument
            android:name="user"
            app:argType="com.example.foodieapp.database.UserEntry" />
        <action
            android:id="@+id/action_reservationsFragment_to_tableSchemeFragment"
            app:destination="@id/tableSchemeFragment" />
        <action
            android:id="@+id/action_reservationsFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.example.foodieapp.view.HelpFragment"
        android:label="HelpFragment" />

    <fragment
        android:id="@+id/restaurantDetailFragment"
        android:name="com.example.foodieapp.view.RestaurantDetailFragment"
        android:label="RestaurantDetailFragment" >

        <action
            android:id="@+id/action_detailFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
        <action
            android:id="@+id/action_detailFragment_to_reservationFragment"
            app:destination="@id/reservationsFragment" />
        <action
            android:id="@+id/action_detailFragment_to_tableSchemeFragment"
            app:destination="@id/tableSchemeFragment" />

    </fragment>
    <fragment
        android:id="@+id/tableSchemeFragment"
        android:name="com.example.foodieapp.view.TableSchemeFragment"
        android:label="TableSchemeFragment" >
        <argument
            android:name="table_scheme_url"
            app:argType="string" />

    </fragment>
</navigation>